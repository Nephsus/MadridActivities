<?xml version="1.0" encoding="utf-8"?>

<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

<RelativeLayout android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


    <ImageView
        android:id="@+id/image_map_location"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"/>


    <ImageView
        android:id="@+id/myactivity_logo__detail"
        android:layout_width="80dp"
        android:layout_below="@+id/image_map_location"
        android:layout_alignParentLeft="true"
        android:layout_height="80dp"
        android:layout_margin="8dp"/>

    <TextView
        android:id="@+id/myactivity_name__detail"
        android:layout_below="@+id/image_map_location"
        android:layout_toRightOf="@+id/myactivity_logo__detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
       />

    <TextView
        android:id="@+id/myactivity_address__detail"
        android:layout_below="@+id/myactivity_logo__detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/myactivity_description__detail"
        android:layout_below="@+id/myactivity_address__detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"/>





</RelativeLayout>
</ScrollView>